{
  "name": "ethereumjs-lib",
  "version": "0.1.5",
  "description": "NodeJS and browser JS library for Ethereum",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum/ethereumjs-lib.git"
  },
  "keywords": [
    "ethereum",
    "bitcoin",
    "crypto",
    "library"
  ],
  "dependencies": {
    "async": "~0.2.10",
    "bigi": "^1.3.0",
    "bignum": "^0.7.0",
    "ecdsa": "^0.5.3",
    "ecurve": "^0.6.0",
    "merkle-patricia-tree": "^0.1.17",
    "rlp": "0.0.8",
    "secp256k1": "0.0.12",
    "sha3": "~1.0.0",
    "underscore": "~1.6.0"
  },
  "devDependencies": {
    "JSONStream": "^0.10.0",
    "browserify": "^5.12.0",
    "crypto-js": "^3.1.2-5",
    "eslint": "^0.8.2",
    "ethrereum-tests": "git+https://github.com/ethereum/tests.git#develop",
    "levelup": "^0.19.0",
    "memdown": "^0.10.2",
    "minimist": "^1.1.0",
    "mocha": ">=1.15.1",
    "uglifyjs": "^2.3.6"
  },
  "testling": {
    "browsers": [
      "ie/9..latest",
      "firefox/15..latest",
      "chrome/22..latest"
    ],
    "harness": "mocha-bdd",
    "files": [
      "test/vm.js",
      "test/transactions.js",
      "test/runBlock.js",
      "test/block.js",
      "test/blockchain.js"
    ]
  },
  "scripts": {
    "test": "./script/eslint.sh && mocha --timeout 60000 --reporter spec ./test/ ./test/common/**",
    "compile": "./node_modules/browserify/bin/cmd.js index.js -s Ethereum | node ./node_modules/uglifyjs/index.js > ethereum-min.js"
  },
  "author": {
    "name": "Ethereum",
    "url": "http://ethereum.org"
  },
  "browser": {
    "lib/network": false,
    "ecdsa-native": false,
    "./lib/ecdsaOps.js": "./browser/ecdsaOps.js",
    "bignum": "./browser/bignum.js",
    "sha3": "./browser/sha3.js"
  }
}
